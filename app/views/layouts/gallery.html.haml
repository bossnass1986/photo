%html{ 'class' => 'no-js', :lang => 'en' }
  %head
    %title= @meta_title
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
  .navbar.navbar-fixed-top
    .navbar-inner
      .container
        .pull-right= "#{yield(:page_title).presence || 'Private Gallery'} | #{photographer.name}"
  .row
    .large-12.columns#content
      - if notice
        .alert.alert-block{ :'data-dismiss' => 'alert' }
          %a.close Ã—
          %p= notice
      .page-header
        %h1= yield(:title).presence || 'Home'
      .row
        .large-12.columns= yield
  #footer.container
    = "&copy; #{Time.now.year}, #{photographer.name}, All Rights Reserved".html_safe