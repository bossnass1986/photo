%li{ :id => "photo_#{photo.id}"}
  .title.th
    %span.caption= truncate(photo.name, :length => 20)
    = link_to '', admin_photo_path(photo), :method => :delete, :remote => true, :class => 'fi-trash'
    = raw "#{link_to(image_tag(photo.photo.thumb('150x100#').url, :size => '150x100'), photo.photo.url, :title => photo.name)}"
