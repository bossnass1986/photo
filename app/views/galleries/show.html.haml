- content_for :title, @gallery.name

- if @gallery.body
  .gallery-body
    = @gallery.body.to_html.html_safe
    %br

%ul.clearing-thumbs{'data-clearing' => ''}
  - @gallery.photos.each do |photo|
    %li
      = link_to(image_tag(photo.photo.thumb('260x173!').url, :size => '260x173', :alt => photo.name), photo.photo.url, :class => 'th')
